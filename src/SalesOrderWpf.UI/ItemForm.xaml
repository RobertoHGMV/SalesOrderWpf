<Window x:Class="SalesOrderWpf.UI.LineForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesOrderWpf.UI"
        mc:Ignorable="d"
        Title="Item" Height="402" Width="585.5">
    <Grid>
        <StackPanel Height="163" Margin="10,10,10,0" VerticalAlignment="Top">
            <TextBlock TextWrapping="Wrap" Text="Código"/>
            <TextBox x:Name="txtItemCode" Height="22" TextWrapping="Wrap" Text=""/>
            <TextBlock TextWrapping="Wrap" Text="Descrição"/>
            <TextBox x:Name="txtItemName" Height="22" TextWrapping="Wrap" Text=""/>
            <TextBlock TextWrapping="Wrap" Text="Quantidade"/>
            <TextBox x:Name="txtQuantity" Height="23" TextWrapping="Wrap" Text=""/>
            <TextBlock TextWrapping="Wrap" Text="Preço"/>
            <TextBox x:Name="txtPrice" Height="22" TextWrapping="Wrap" Text=""/>
        </StackPanel>
        <TextBlock Margin="0,0,140,14" TextWrapping="Wrap" Text="Total:" HorizontalAlignment="Right" Width="28" Height="16" VerticalAlignment="Bottom"/>
        <TextBox x:Name="txtLineTotal" Margin="0,0,10,10" TextWrapping="Wrap" Text="" HorizontalAlignment="Right" Width="120" Height="24" VerticalAlignment="Bottom"/>
        <Button x:Name="cmdOk" Content="OK" HorizontalAlignment="Left" Margin="10,341,0,0" VerticalAlignment="Top" Width="74" Click="CmdOk_Click"/>
    </Grid>
</Window>
